<% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
   </div>
<% end %>


<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <div>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>


  <div>
    <%= f.label :Body %><br>
    <%= f.text_area :body %>
  </div>

  <div><%= f.submit 'Update Book' %></div>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path(@book.id) %>

<% end %>

